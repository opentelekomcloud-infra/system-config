default: &default_vars
  alerta_smtp_host: 'out-cloud.mms.t-systems-service.com:25'
  alerta_smtp_from_address: alerts@alerts.eco.tsi-dev.otc-service.com
  alerta_heartbeat_timeout: 300

alerta_instances:
  production_stg:
    default: *default_vars
    alerta_columns:
      - severity
      - status
      - lastReceiveTime
      - duplicateCount
      - environment
      - service
      - resource
      - event
      - value
      - text
    
    alerta_plugins:
      - blackout
      - zulip
    
    firewalld_extra_ports_enable: ['8080/tcp']
  
alerta_instances_secrets:
  production_stg:
    alerta_db_url: "postgresql://fake"
    alerta_zulip_api_key: "apikey"
    alerta_admin_key: "adminkey"
    alerta_api_key: "apikey"
    alerta_admin_users: "admin"
    alerta_bind_password: "password"
    alerta_allowed_environments: [ 'prod', 'dev' ]

alerta_instance: production_stg
