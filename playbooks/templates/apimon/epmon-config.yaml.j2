secure: {{ apimon_epmon_secure_file_location }}
gear:
  - host: 0.0.0.0
    port: 4730
    start: true
log:
  config: /etc/apimon/logging.conf
alerta:
  endpoint: {{ apimon_alerta_endpoint }}
epmon:
  socket: /tmp/epmon.socket
  zone: {{ apimon_zone }}
  clouds: {{ apimon_epmon_clouds }}
metrics:
  statsd:
    host: {{ ansible_host }}
    port: 8125
