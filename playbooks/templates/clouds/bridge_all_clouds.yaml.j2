    profile: otc
    auth: 
      username: {{ apimon_all_clouds.otcapimon_probes3.auth.username }}
      password: "{{ apimon_all_clouds.otcapimon_probes3.auth.password }}"
      project_name: {{ apimon_all_clouds.otcapimon_probes3.auth.project_name }}
      user_domain_name: {{ apimon_all_clouds.otcapimon_probes3.auth.user_domain_name }}
