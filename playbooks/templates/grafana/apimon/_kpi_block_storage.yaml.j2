  - datasource: {{ grafana_ds | default('apimon') }}
    fieldConfig:
      defaults:
        color:
          mode: thresholds
        noValue: '0'
        thresholds:
          mode: percentage
          steps:
            - color: red
              value: null
            - color: yellow
              value: 80
            - color: green
              value: 99.999
        unit: percent
    {{ mcr.grid_pos(0, 77, 5, 4) }}
    options:
      colorMode: value
      reduceOptions:
        calcs:
          - lastNotNull
        fields: ''
        values: false
    targets:
      - queryType: randomWalk
        refCount: 0
        refId: A
        target: consolidateBy(asPercent(sumSeries(sumSeries(stats.counters.apimon.metric.$environment.$zone.create_volume.{default,eu*}.passed.count),
          stats.counters.apimon.metric.$environment.$zone.create_volume.{default,eu*}.attempted.count)),
          'avg')
        textEditor: false
    title: Volume creation success rate
    type: stat

  - datasource: {{ grafana_ds | default('apimon') }}
    fieldConfig:
      defaults:
        color:
          mode: thresholds
        custom: {}
        mappings: []
        max: 100
        min: 0
        thresholds:
          mode: percentage
          steps:
            - color: blue
              value: null
        unit: short
      overrides:
        - matcher:
            id: byName
            options: failed
          properties:
            - id: thresholds
              value:
                mode: absolute
                steps:
                  - color: red
                    value: null
    {{ mcr.grid_pos(4, 77, 5, 4) }}
