      reduceOptions:
        calcs:
          - lastNotNull
        fields: ''
        values: false
      showUnfilled: true
    targets:
      - queryType: randomWalk
        refId: A
        target: aliasByMetric(summarize(groupByNode(stats.counters.apimon.metric.$environment.$zone.create_volume.{default,eu*}.{failed,attempted}.count,
          8, 'sum'), '1d', 'sum', false))
        textEditor: false
    title: Count of volume creation attempts
