# Kubernetes configuration for production nodepool
# This file will be populated by ArgoCD Vault Plugin
apiVersion: v1
kind: Config
clusters:
- cluster:
    certificate-authority-data: <vault:secret/data/zuul/prod/kube#ca_cert>
    server: <vault:secret/data/zuul/prod/kube#server>
  name: production-cluster
contexts:
- context:
    cluster: production-cluster
    user: zuul-user
  name: production
current-context: production
users:
- name: zuul-user
  user:
    token: <vault:secret/data/zuul/prod/kube#token>
