# Base configuration for OpenAPI Validator
# Environment-specific values should be overridden in overlays

# Core application settings
NODE_ENV=prod
PORT=3000
LOG_LEVEL=info

# API settings
API_TIMEOUT=30s
MAX_REQUEST_SIZE=50mb

# Health check settings
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30s
METRICS_PORT=3000

# Application behavior
ENABLE_REQUEST_LOGGING=false
ENABLE_CORS=true
CACHE_TTL=300s

# Authentication
ENABLE_AUTH=true
NEXT_PUBLIC_ENABLE_AUTH=true
