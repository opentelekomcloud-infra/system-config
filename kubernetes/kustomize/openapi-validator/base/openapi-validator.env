# Base configuration for OpenAPI Validator
# Environment-specific values should be overridden in overlays

# Core application settings
NODE_ENV=prod
PORT=3000
LOG_LEVEL=info

# API settings
API_TIMEOUT=30s
MAX_REQUEST_SIZE=50mb

# Gitea integration - token from Vault via ArgoCD plugin
GITEA_BASE_URL=<path:secret/data/gitea/config#gitea_address>
GITEA_TOKEN=<path:secret/data/openapi-validator/git-connection#gitea_token>

# Health check settings
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30s
METRICS_PORT=3000

# Application behavior
ENABLE_REQUEST_LOGGING=false
ENABLE_CORS=true
CACHE_TTL=300s
