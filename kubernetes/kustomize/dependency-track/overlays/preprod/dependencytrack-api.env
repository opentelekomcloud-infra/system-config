# General logging level
LOGGING_LEVEL=INFO

# OIDC Authentication Configuration (values from Vault via AVP)
ALPINE_OIDC_ENABLED=true
ALPINE_OIDC_CLIENT_ID=<path:secret/data/dependencytrack/oidc#client-id>
ALPINE_OIDC_ISSUER=<path:secret/data/dependencytrack/oidc#issuer-url>
ALPINE_OIDC_USERNAME_CLAIM=preferred_username
#ALPINE_OIDC_TEAMS_CLAIM=urn:zitadel:iam:org:project:roles
ALPINE_OIDC_TEAMS_CLAIM=groups
ALPINE_OIDC_USER_PROVISIONING=true
ALPINE_OIDC_TEAM_SYNCHRONIZATION=true

# Database configuration (credentials in separate secret)
# Connection pooling settings included in secret generator

# Security settings
ALPINE_ENFORCE_AUTHENTICATION=true
ALPINE_ENFORCE_AUTHORIZATION=true

# CORS configuration
ALPINE_CORS_ENABLED=true
ALPINE_CORS_ALLOW_ORIGIN=https://dependencytrack.eco-preprod.tsi-dev.otc-service.com
ALPINE_CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
ALPINE_CORS_ALLOW_HEADERS=Origin,Content-Type,Authorization,X-Requested-With,Content-Length,Accept,Origin,X-Api-Key,X-Total-Count,*
ALPINE_CORS_EXPOSE_HEADERS=Origin,Content-Type,Authorization,X-Requested-With,Content-Length,Accept,Origin,X-Api-Key,X-Total-Count
ALPINE_CORS_ALLOW_CREDENTIALS=true
ALPINE_CORS_MAX_AGE=3600

# API settings
ALPINE_API_KEY_PREFIX=odt_

# Worker thread configuration for performance
ALPINE_WORKER_THREADS=8
ALPINE_WORKER_POOL_DRAIN_TIMEOUT_DURATION=PT60S

# Metrics and monitoring
ALPINE_METRICS_ENABLED=true
#ALPINE_METRICS_AUTH_USERNAME=<path:secret/data/dependencytrack/metrics#username>
#ALPINE_METRICS_AUTH_PASSWORD=<path:secret/data/dependencytrack/metrics#password>

# Health check configuration
ALPINE_HEALTH_CHECKS_ENABLED=true

# Session settings
ALPINE_SESSION_TIMEOUT=PT4H

# Secret key for encryption (from Vault)
# Use ALPINE_SECRET_KEY instead of ALPINE_SECRET_KEY_PATH
# The value will be injected from Vault by ArgoCD Vault Plugin
ALPINE_SECRET_KEY=<path:secret/data/dependencytrack/encryption#secret-key>

# Scanner settings
SCANNER_OSSINDEX_ENABLED=true
SCANNER_OSSINDEX_API_USERNAME=<path:secret/data/dependencytrack/scanner#ossindex-username>
SCANNER_OSSINDEX_API_TOKEN=<path:secret/data/dependencytrack/scanner#ossindex-token>

SCANNER_SNYK_ENABLED=false
SCANNER_INTERNAL_ENABLED=true

# Vulnerability database settings
VULNERABILITY_SOURCE_NVD_ENABLED=true
#VULNERABILITY_SOURCE_NVD_FEEDS_URL=https://nvd.nist.gov/feeds/json/cve/2.0/
VULNERABILITY_SOURCE_GITHUB_ADVISORIES_ENABLED=true
VULNERABILITY_SOURCE_GITHUB_ADVISORIES_ACCESS_TOKEN=<path:secret/data/dependencytrack/github#access-token>

# Task scheduler settings for performance
TASK_SCHEDULER_LDAP_SYNC_CADENCE=PT6H
TASK_SCHEDULER_GITHUB_ADVISORY_MIRROR_CADENCE=PT24H
TASK_SCHEDULER_OSV_MIRROR_CADENCE=PT24H
TASK_SCHEDULER_NVD_MIRROR_CADENCE=PT24H

# Notification settings
NOTIFICATION_LEVEL=INFORMATIONAL
NOTIFICATION_SMTP_ENABLED=false

# BOM processing settings
BOM_VALIDATION_ENABLED=true
BOM_VALIDATION_MAX_SIZE_MB=20

# Search index configuration
SEARCH_INDEXES_CONSISTENCY_CHECK_ENABLED=true
SEARCH_INDEXES_CONSISTENCY_CHECK_CADENCE=PT24H

# Privacy settings
GENERAL_BASE_URL=https://dependencytrack.eco-preprod.tsi-dev.otc-service.com
